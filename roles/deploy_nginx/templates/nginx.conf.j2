
server {
    listen {{ nginx_port_no_tls }} ssl;
    root /usr/share/nginx/html;
    index index.html index.htm;
    server_name {{ ansible_host }};
    ssl_certificate /etc/ssl/{{ ansible_host }}_cert.pem;
    ssl_certificate_key /etc/ssl/{{ ansible_host }}_privkey.pem;
    location / {
            try_files $uri $uri/ =404;
    }
}